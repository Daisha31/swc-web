generator client {
  provider = "prisma-client-js"
}

datasource db {
  // TODO replace with planetscale after getting IT sign off
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model AuthenticationNonce {
  id String @id
}

model User {
  id                      String   @id @default(uuid())
  address                 String   @unique
  datetimeCreated         DateTime @updatedAt
  datetimeUpdated         DateTime @default(now())
  sampleDatabaseIncrement Int      @default(0)
}
